{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabled": true,
  "timezone": "Europe/Berlin",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitBodyTable": true,
  "helm-values": {
    "fileMatch": ["./.+\\.yaml$"],
    "ignorePaths": [
      "**/archive/**"
    ]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  }
}